{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "docs/casper/schemas/collateral-accounting-vector.schema.json",
  "title": "Collateral Accounting Conversion Test Vector (v1)",
  "type": "object",
  "required": ["version", "cases"],
  "properties": {
    "version": { "type": "string", "enum": ["v1"] },
    "notes": { "type": "string" },
    "cases": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "inputs", "expected"],
        "properties": {
          "id": { "type": "string" },
          "inputs": {
            "type": "object",
            "required": ["asset", "externalDecimals", "internalDecimals", "rounding", "amountExternal"],
            "properties": {
              "asset": { "type": "string", "enum": ["CSPR", "stCSPR"] },
              "externalDecimals": { "type": "integer", "minimum": 0, "maximum": 36 },
              "internalDecimals": { "type": "integer", "minimum": 0, "maximum": 36 },
              "rounding": { "type": "string", "enum": ["FLOOR", "CEIL", "ROUND_HALF_UP"] },
              "amountExternal": { "type": "string", "pattern": "^[0-9]+$" }
            },
            "additionalProperties": false
          },
          "expected": {
            "type": "object",
            "required": ["amountInternal", "amountExternalRoundTrip"],
            "properties": {
              "amountInternal": { "type": "string", "pattern": "^[0-9]+$" },
              "amountExternalRoundTrip": { "type": "string", "pattern": "^[0-9]+$" }
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
